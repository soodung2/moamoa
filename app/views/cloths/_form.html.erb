      </div>
      
      
      
      
      <div class="field">
        <%= f.label :size, "무신사스토어 Link"%>
        <input style="height: 30px; width: 320px;" type="text" name="name" required>
      </div>
      
      <div class="field">
        <%= f.label :price, "쿠팡 Link" %><br>
        <input style="height: 30px; width: 320px;" type="text" name="name" required>
      </div>
      
      <div class="field">
        <%= f.label :image4, "옥션 Link" %><br>
