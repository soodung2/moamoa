
<h2 class="login_text">Log in</h2>

<div class="login_form">
  <div class="container_login">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <h6>Email</h6>
    <%= f.input :email, required: false, autofocus: true, input_html: { class: 'login_email' }, label: false %>
   <h6>Password</h6>
    <%= f.input :password, required: false, input_html: { class: 'login_email' }, label: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
</div>
<br>

<button type="f.button :submit" class="btn btn-secondary btn-lg btn-block">Log in</button>
<% end %>

 <br>
 <br>
 <%= render "devise/shared/links" %>
 </div>


</div>



